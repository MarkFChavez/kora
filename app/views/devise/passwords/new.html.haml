
.row
  .col-lg-12
    .row.top20
      .col-lg-6.col-lg-offset-3
        %h2.center Reset Password
        %hr

        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal top20", role: "form" }) do |f|
          - if resource.errors.any?
            .alert.alert-danger
              %p.bold= "#{pluralize(resource.errors.count, "error")} found:"
              - resource.errors.full_messages.each do |error|
                %div
                  %small
                    %i.fa.fa-times.fa-lg

          .form-group
            = f.label :email, class: "col-lg-2 control-label"
            .col-lg-10
              = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email address"

          .center
            = f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg"

        = render "devise/shared/links"
