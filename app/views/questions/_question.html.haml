.row.padding15
  .col-lg-12
    %div
      .row
        .col-lg-12
          = link_to question.body, question, class: "link"

      .row
        .col-lg-12
          = link_to "Write Answer", new_question_answer_path(question), class: "mini btn btn-default"
          = link_to question, class: "mini btn btn-inverse" do
            = pluralize question.answers.size, "answer"
